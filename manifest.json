{
    "manifest_version": 2,
    "name": "NoEuro",
    "short_name": "No Euro",
    "default_locale": "en",
    "version": "0.0.2",
    "description": "Hide all content about the Euro 2016",
    "browser_action": {
        "default_icon": "assets/icon128.png"
    },
    "permissions": [
        "tabs",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "web_accessible_resources": [
        "noEuro.js"
    ]
}
